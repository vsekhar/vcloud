# the 'vmesh' section passes paramaters to the mesh module
# parameters to the kernel are provided in a separate section

[vmesh]
bind_address=
bind_port=0
seeds=[]
connections=3
peers=30
peer_timeout=30
verbosity=2

kernel=libvgp
kernel_path=../../cvgp/Release
kernel_greeting=hello from libvgp

# kernel-specific params (section name must match kernel module name)
[libvgp]
initparam=Ok

